<!-- This example requires Tailwind CSS v2.0+ -->
<div class="relative bg-white rounded-lg overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
      <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
        <div class="sm:text-center lg:text-left">
          <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
            <span class="block text-red-900 xl:inline"><%= t("layout.header.title") %></span>
            <br><span class="block text-red-400 xl:inline"><%= @cup.year %></span>
          </h1>
          <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
            <% if @cup.end_on %>
              <%= "#{l(@cup.start_on, format: :day_only)}â€“#{l(@cup.end_on, format: :long)}," %>
            <% else %>
              <%= "#{l(@cup.start_on, format: :long)}," %>
            <% end %>
            <%= t("layout.header.title_em") %>
          </p>
          <% unless @cup.past? %>
            <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
              <div class="rounded-md shadow">
                <%= link_to t("navigation.register.text"), @current_user ? cup_user_path(@cup, @current_user.id) : user_session_path, title: t("navigation.register.title").html_safe, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-600 hover:bg-red-700 md:py-4 md:text-lg md:px-10" %>
              </div>
            </div>
          <% end %>
        </div>
      </main>
    </div>
  </div>
  <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-2/5">
    <%= image_tag "hero-lg.jpg", class: "h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full", alt: "hero" %>
  </div>
</div>
