- title @title
.row[@user]
  .col-xs-12.col-md-6
    %h2= @title
    - if @user == current_user
      %table.table
        %tr.even
          %th= User.human_attribute_name :last_name
          %td= @user.last_name
        %tr.odd
          %th= User.human_attribute_name :first_name
          %td= @user.first_name
        %tr.even
          %th= User.human_attribute_name :dob
          %td= @user.dob.to_s
        %tr.odd
          %th= User.human_attribute_name :gender
          %td= @user.gender
        %tr.even
          %th= User.human_attribute_name :email
          %td= @user.email
        %tr.odd
          %th= User.human_attribute_name :club
          %td= @user.club.name if @user.club
          / # %td= mail_to(@user.email, 'Email', encode: 'hex', class: 'email')
    - else
    .admin_links
      = link_to("<span class='glyphicon glyphicon-edit'></span> edit".html_safe, edit_user_registration_path(@user), class: "btn btn-info") if can?(:update, @user)
      = link_to("<span class='glyphicon glyphicon-trash'></span> delete account".html_safe , cancel_user_registration_path(@user), class: "btn btn-danger") if can?(:destroy, @user)
      / = link_to("<span class='glyphicon glyphicon-trash'></span> Delete account".html_safe, user_registration_path, data: {confirm: "Are you sure you want to destroy your account?"}, method: :delete, class: "btn btn-danger") if can?(:destroy, @user)
  .col-xs-12.col-md-6
    %h2
      = t(".your_registrations")
      = link_to "<span class='glyphicon glyphicon-plus'></span> #{t(".register_someone_else")}".html_safe, new_user_kenshi_path(current_user, locale: I18n.locale), class: "btn btn-info"
    - if @user.kenshis.present?
      = render @user.kenshis
    - else
      %p
        Aucune inscription pour l'instant. Voulez-vous
        = link_to 'vous inscrire', new_user_kenshi_path(current_user, self: true, locale: I18n.locale)
        à la compétion? ou inscrire
        = link_to("quelqu'un d'autre", new_user_kenshi_path(current_user, locale: I18n.locale))+'?'
