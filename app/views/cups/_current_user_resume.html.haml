- if user_signed_in?
  .panel.panel-warning.user-account
    .panel-heading
      %h4
        - if Time.now.hour <= 10
          Ohayō gozaimasu
        - elsif Time.now.hour >= 22
          Konbanwa
        - else
          Konnichiwa
        %em= current_user.first_name
    - if current_user.has_kenshis_for_cup?(@cup)
      .panel-body
        You have
        = current_user.kenshis.for_cup(@cup).count
        registrations
      %ul.list-group
        - current_user.kenshis.for_cup(@cup).each do |kenshi|
          %li.list-group-item
            = kenshi.full_name
            %br
            = kenshi.participations.map{|p| p.category.name}.join(", ")
    - else
      .panel-body
        You have no registrations yet.
        Would you like to
        = link_to "register someone?", new_user_kenshi_path(current_user)
    .panel-footer
      = link_to "<span class='glyphicon glyphicon-plus'></span> #{t(".register_someone_else")}".html_safe, new_user_kenshi_path(current_user, locale: I18n.locale), class: "btn btn-info btn-xs"
