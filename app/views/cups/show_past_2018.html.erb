      .panel-heading
        %h3
          = label_tag 'EMAIL', "Newsletter"
      .panel-body.form-inline
        .form-group
          = email_field_tag 'EMAIL', nil, required: true, placeholder: t('cups.show.newsletter.email'), class: "form-control"
          = button_tag t('cups.show.newsletter.button'), class: "btn btn-info"
        %p.help-block= t('cups.show.newsletter.register')

