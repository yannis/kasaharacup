<%= form_for(resource, as: resource_name, url: user_session_path, html: {class: "space-y-6"}) do |f| %>
  <% autofocus ||= false%>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.email_field :email, autofocus: autofocus.presence, autocomplete: :email, required: true, class: "appearance-none block w-full max-w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.password_field :password, required: true, class: "appearance-none block w-full max-w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm" %>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <%= f.check_box :remember_me, as: :boolean, class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded" %>
      <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
    </div>
  </div>

  <div>
    <%= f.submit t("devise.sessions.new.title"), class: "w-full max-w-xs flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
  </div>
<% end %>
