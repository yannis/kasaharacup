%p.devise-shared-links
  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to "<i class='fa fa-#{provider.to_s}'></i> | #{t("devise.links.oauth")} #{provider.to_s.titleize}".html_safe, user_omniauth_authorize_path(provider), class: "btn btn-sm btn-#{provider.to_s}"
      %br
  - if controller_name != 'sessions'
    = link_to t("devise.links.sign_in"), new_user_session_path
    %br

  - if devise_mapping.registerable?
    = link_to t("devise.links.sign_up"), new_user_registration_path
    %br

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to t("devise.links.forgot"), new_user_password_path
    %br

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to t("devise.links.confirmation"), new_user_confirmation_path
    %br

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to t("devise.links.unlock"), new_user_unlock_path
    %br


