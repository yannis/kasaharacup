%p.devise-shared-links
  - if controller_name != 'sessions'
    = link_to t("devise.links.sign_in"), new_user_session_path
    %br

  - if devise_mapping.registerable?
    = link_to t("devise.links.sign_up"), new_user_registration_path
    %br

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to t("devise.links.forgot"), new_user_password_path
    %br

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to t("devise.links.confirmation"), new_user_confirmation_path
    %br

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to t("devise.links.unlock"), new_user_unlock_path
    %br
