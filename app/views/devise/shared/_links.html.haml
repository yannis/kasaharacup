- if controller_name != 'sessions' && signin
  = link_to t("devise.links.sign_in"), new_session_path(resource_name)
  %br

- if devise_mapping.registerable? && signup
  = link_to t("devise.links.sign_up"), new_registration_path(resource_name)
  %br

- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to t("devise.links.forgot"), new_password_path(resource_name)
  %br

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t("devise.links.confirmation"), new_confirmation_path(resource_name)
  %br

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t("devise.links.unlock"), new_unlock_path(resource_name)
  %br

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "<i class='fa fa-#{provider.to_s}'></i> | #{t("devise.links.oauth")} #{provider.to_s.titleize}".html_safe, omniauth_authorize_path(resource_name, provider), class: "btn btn-#{provider.to_s}"
    %br

