<% @title = t("devise.passwords.title")%>
<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <%= image_tag "logo/kendo-logo-sticker.svg", alt: "logo", class: "mx-auto h-16 w-auto" %>
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      <%= @title %>
    </h2>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-full"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="space-y-6">
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.password_field :password, required: true, class: "appearance-none block w-full max-w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm" %>
            </div>
          </div>
          <div>
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.password_field :password_confirmation, required: true, class: "appearance-none block w-full max-w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm" %>
            </div>
          </div>
          <div>
            <%= f.submit t("devise.sessions.new.title"), class: "w-full max-w-xs flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
