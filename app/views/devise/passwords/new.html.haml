- @title = t("devise.passwords.forgot")
.row
  .col-xs-12.col-md-12
    %h2= @title
  .col-xs-12.col-md-6
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal"}) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      .form-group
        = f.label :email, class: "col-sm-2"
        .col-sm-4
          = f.email_field :email, autofocus: true, class: "form-control"
      .col-sm-2
        = f.submit t("devise.passwords.forgot"), class: "btn btn-success"
  .col-xs-12.col-md-12
    = render "devise/shared/links", signin: true, signup: true
