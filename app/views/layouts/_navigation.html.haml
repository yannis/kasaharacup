%nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Kasahara Cup 2014", root_path, class: "navbar-brand"
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to t("navigation.home.text"), root_path, title: t("navigation.home.title").html_safe,  data: {toggle: "tooltip", placement: "bottom"}, class: "bs-tooltip"
        %li
          = link_to t("navigation.kenshis.text", kenshis: @cup.kenshis.count), kenshis_path, title: t("navigation.kenshis.title").html_safe,  data: {toggle: "tooltip", placement: "bottom"}, class: "bs-tooltip"
        %li
          = link_to t("navigation.teams.text"), teams_path, title: t("navigation.teams.title").html_safe,  data: {toggle: "tooltip", placement: "bottom"}, class: "bs-tooltip"
        %li
          = link_to t("navigation.headlines.text"), headlines_path, title: t("navigation.headlines.title").html_safe,  data: {toggle: "tooltip", placement: "bottom"}, class: "bs-tooltip"
      .navbar-form.navbar-left
        - if user_signed_in?
          = link_to "<span class='glyphicon glyphicon-plus'></span> #{t("navigation.register.text")}".html_safe, user_path(current_user), title: t("navigation.register.title").html_safe,  data: {toggle: "tooltip", placement: "bottom"}, class: "bs-tooltip btn btn-info navbar-btn"
        - else
          = link_to "<span class='glyphicon glyphicon-plus'></span> #{t("navigation.register.text")}".html_safe, new_user_session_path, title: t("navigation.register.title").html_safe,  data: {toggle: "tooltip", placement: "bottom"}, class: "bs-tooltip btn btn-info navbar-btn"
      %ul.nav.navbar-nav.navbar-right
        %li#lang
          = link_to (@inverse_locale == 'fr' ? 'franÃ§ais' : 'english'), {locale: @inverse_locale}
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              %i.fa.fa-user
              = current_user.full_name
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "Settings", user_path(current_user)
              %li
                = link_to t('subnav.signedin.signout'), signout_path
        - else
          %li.dropdown.nav-signin
            = link_to new_session_path('user'), data: {toggle: 'dropdown',  target: "#"}, class: "dropdown-toggle" do
              Sign in
              %b.caret
            .dropdown-menu
              = render "devise/sessions/form"
    = render "layouts/registrations"
