%nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Kasahara Cup 2014", root_path, class: "navbar-brand"
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to "Home", root_path
        %li
          = link_to "Registrations", kenshis_path
        %li
          = link_to "Teams", teams_path
      .navbar-form.navbar-left
        - if user_signed_in?
          = link_to "Register", user_path(current_user), class: "btn btn-info navbar-btn"
        - else
          %button.btn.btn-info.navbar-btn.nav-register{type: "button"}
            Register
      %ul.nav.navbar-nav.navbar-right
        %li#lang
          = link_to (@inverse_locale == 'fr' ? 'franÃ§ais' : 'english'), {locale: @inverse_locale}
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              %i.fa.fa-user
              = current_user.full_name
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "Settings", user_path(current_user)
              %li
                = link_to t('subnav.signedin.signout'), signout_path
        - else
          %li.dropdown.nav-signin
            = link_to new_session_path('user'), data: {toggle: 'dropdown',  target: "#"}, class: "dropdown-toggle" do
              Sign in
              %b.caret
            .dropdown-menu
              = render template: "devise/sessions/new"
    = render "layouts/registrations"
