<footer class="bg-white pin-b" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8">
    <div class="grid grid-cols-1 gap-10 divide-y lg:grid-cols-12 lg:divide-x lg:divide-y-0">
      <div class="lg:col-span-6">
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">
          <%= t ".contact.title" %>
        </h3>
        <p class="mt-2 text-base text-gray-500 prose">
          <%= raw t ".contact.text", mail: mail_to(ENV.fetch("CONTACT_EMAIL"), nil, encode: "hex", replace_at: "_at_", replace_dot: "_dot_") %>
        </p>
        <div class="mt-6 pt-6 border-t">
          <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">
            <%= t(".newsletter.title") %>
          </h3>
          <p class="mt-2 text-base text-gray-500">
            <%= t(".newsletter.subtitle") %>
          </p>
        </div>
        <%= form_tag "https://kendo-geneve.us6.list-manage.com/subscribe/post", class: "mt-4 sm:flex sm:items-center" do %>
          <%= hidden_field_tag :u, "5545e540aff9e8b07df2f5531" %>
          <%= hidden_field_tag :id, "4b7d62b6b3" %>
          <%= label_tag "EMAIL", "Email address", class: "sr-only" %>
          <%=
            email_field_tag "EMAIL",
              nil,
              autocomplete: "email",
              required: true,
              placeholder: t(".newsletter.placeholder"),
              class: "appearance-none shadow-sm focus:ring-red-500 focus:border-red-500 block w-full sm:text-sm border-gray-300 rounded-md"
          %>
          <%= button_tag t(".newsletter.button"), class: "mt-3 w-full inline-flex items-center justify-center px-4 py-2 border border-transparent shadow-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" %>
        <% end %>
      </div>
      <div class="pt-10 lg:pt-0 lg:col-span-6 lg:pl-10">
        <div class="grid grid-cols-1 gap-10 lg:grid-cols-12">
          <div class="lg:col-span-8">
            <%= image_tag "logo-avec-soutien-ville-geneve-couleur.png", class: "object-contain mx-auto max-h-24" %>
            <%= link_to(image_tag("ski-logo.png", class: "object-contain mt-12 mx-auto"), "https://kendo.ch") %>
          </div>
          <div class="lg:col-span-4">
            <%= link_to(image_tag("SDK_logo.jpg", class: "h-44 mx-auto lg:mt-6 lg:object-contain"), "https://sdkbudo.ch") %>
          </div>
        </div>
      </div>
    </div>
    <div class="pt-10 flex items-center justify-between border-t mt-10">
      <div class="flex space-x-6 order-2">
        <a href="https://www.instagram.com/kendogeneve/" class="text-gray-400 hover:text-gray-500" target="_blank" rel="noopener noreferrer">
          <span class="sr-only">Instagram</span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
